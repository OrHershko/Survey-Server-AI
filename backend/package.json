{
  "name": "survey-server-backend",
  "version": "1.0.0",
  "description": "Backend API for Survey Server with AI Summarization",
  "main": "server.js",
  "scripts": {
    "prepare": "npx husky install",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node tests/testRunner.js",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:auth": "jest tests/auth.test.js",
    "test:surveys": "jest tests/survey.test.js",
    "test:ai": "jest tests/ai.test.js",
    "test:services": "jest tests/services/",
    "test:middleware": "jest tests/middleware/",
    "test:integration": "jest tests/integration/",
    "test:unit": "jest tests/services/ tests/middleware/",
    "test:api": "jest tests/auth.test.js tests/survey.test.js tests/ai.test.js",
    "test:verbose": "VERBOSE_TESTS=true node tests/testRunner.js",
    "test:strict": "STRICT_COVERAGE=true node tests/testRunner.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write ."
  },
  "keywords": [
    "survey",
    "api",
    "express",
    "mongodb",
    "ai",
    "summarization"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^5.2.2",
    "chai": "^5.2.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "faker": "^5.5.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  }
}
